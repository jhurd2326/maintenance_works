.container.d-flex.justify-content-center
  .col-xl-8.content-card
    .row.text-center.mt-5
      .col-12
        %h1 Upload Maintenance Requests

    .row.d-flex.justify-content-center
      .col-8
        = form_for @upload, url: upload_requests_path do |f|
          .form-group.my-5
            = f.file_field :files, multiple: true

          .my-3.text-center
            = f.submit "Upload", class: "btn custom-purple-light"
