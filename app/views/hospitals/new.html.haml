.container.d-flex.justify-content-center
  .col-xl-8.content-card
    .row.text-center.mt-5
      .col-12
        %h1 New Hospital

    .row.d-flex.justify-content-center
      .col-8
        = form_for @hospital do |f|

          .md-form.my-5
            = f.text_field :name
            = f.label :name

          .md-form.my-5
            = f.text_field :address
            = f.label :address

          .md-form.my-5
            = f.text_field :city
            = f.label :city

          .md-form.my-5
            = f.text_field :country
            = f.label :country

          .md-form.my-5
            = f.text_field :phone_number
            = f.label :phone_number

          .my-3.text-center
            = f.submit "Create", class: "btn custom-purple-light"
